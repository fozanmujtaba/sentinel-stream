# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=sentinel-fraud-detection
KAFKA_TRANSACTIONS_TOPIC=transactions
KAFKA_ALERTS_TOPIC=fraud_alerts
KAFKA_DLQ_TOPIC=dead_letter_queue

# Model Configuration
MODEL_PATH=./models/fraud_model.joblib

# Velocity Check Configuration
VELOCITY_WINDOW_SECONDS=60
VELOCITY_THRESHOLD=5

# Fraud Detection
FRAUD_SCORE_THRESHOLD=0.7

# Application
LOG_LEVEL=INFO
DEBUG=false

# Producer Configuration
TRANSACTIONS_PER_SECOND=50
FRAUD_PROBABILITY=0.05
VELOCITY_ATTACK_PROBABILITY=0.02

# Dashboard
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/alerts
NEXT_PUBLIC_API_URL=http://localhost:8000
